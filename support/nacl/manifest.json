{
  "manifest_version": 2,
  "name": "Movian",
  "version": "__VERSION__",

  "description": "A media center for playing all sorts of audio/video files.",
  "icons": {
    "16": "st16.png",
    "128": "st128.png"
  },

  "minimum_chrome_version": "44",
  "offline_enabled": true,
  "requirements": {
    "3D": {
      "features": ["webgl"]
    }
  },
  "permissions": ["unlimitedStorage", "fullscreen",
                  {
                    "socket": [
                      "tcp-listen:*:*",
                      "tcp-connect",
                      "resolve-host",
                      "udp-bind:*:*",
                      "udp-send-to:*:*",
                      "network-state",
                      "udp-multicast-membership"
                    ]
                  }
                 ],

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
