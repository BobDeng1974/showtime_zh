#include "skin://theme.view"

#define SEARCHBAR() {
  widget(container_x, {
    spacing: 1em;
    divider: true;
    padding: [2em, 0];
    widget(container_z, {

      filterConstraintX: true;
      widget(quad, {
        zoffset: -400;
        color: 0;
        alpha: 0.4 + $view.searchFocused();
      });
      widget(text, {
        padding: [1em, 0.5em];
        style: "ListItemValue";
        size: 1.2em;
        font: "skin://fonts/RobotoCondensed-Regular.ttf";
        focusable: true;

        $view.searchFocused = isFocused();

        bind($view.searchQuery);
        onEvent(enter, navOpen("search:" + $view.searchQuery),
	        $view.searchQuery);
        onEvent(submit, navOpen("search:" + $view.searchQuery),
	        $view.searchQuery);
      });
    });
    widget(container_z, {
      widget(quad, {
        zoffset: -400;
        color: 0;
        alpha: 0.4;
      });

      widget(label, {
        align: center;
        padding: [2em, 0];
        caption: fmt("%02d:%02d", $core.clock.hour, $core.clock.minute);
      });
    });
  });
}


#define NEWSSTAND() {
  cloner($core.news, container_x, {
    height: 2em;
    divider: true;
    spacing: 1em;
    padding: [2em, 0];

    widget(icon, {
      source: "skin://icons/ic_info_outline_48px.svg";
    });

    widget(label, {
      caption: $self.message;
    });

    space(1);

    widget(container_z, {
      onEvent(activate, select(isVoid($self.location),
                               deliverEvent($self.eventSink, $self.action),
                               navOpen($self.location)));
      focusable: 0.1;
      GridItemHighlight();

      widget(label, {
        padding: [1em, 0];
        caption: $self.caption;
        color: iir(!isNavFocused(), 4);
      });
    });

    widget(container_z, {
      onEvent(activate, deliverEvent($self.eventSink, "dismiss"));
      focusable: 0.05;

      focusable: 0.1;
      GridItemHighlight();

      widget(label, {
        padding: [1em, 0];
        caption: _("Dismiss");
        color: iir(!isNavFocused(), 4);
      });
    });
  });
}


onEvent(menu, { toggle($clone.showSidebar); });

widget(container_z, {

  widget(layer, {

    onEvent(right, {
      $clone.showSidebar = true;
    }, true, false);

    widget(clip, {

      rightPx: select($clone.showSidebar, 22em, 0);
      blurOutside: 1;
      alphaOutside: 0.05;

      widget(container_z, {
        widget(array, {
          id: "main";

          alpha: iir(select($clone.showSidebar, 0.3, 1), 4);

          margin: [2em, 1em];
          childTilesX: 5;
          childTilesY: 4;

          NEWSSTAND();
          SEARCHBAR();

          cloner($core.services.stable, container_z, {

            focusable: true;
            GridItemHighlight();
            onEvent(activate, navOpen($self.url, void, $self));

            widget(container_y, {

              spacing: 0.5em;
              padding: 0.5em;

              widget(image, {
                source: $self.icon ??
	          "skin://icons/" +
	          translate($self.type, "ic_folder_48px",
		            "tv",       "ic_tv_48px",
		            "usb",      "ic_usb_48px",
		            "cd",       "ic_album_48px",
		            "dvd",      "ic_album_48px",
		            "bluray",   "ic_album_48px",
		            "setting",  "ic_settings_48px",
		            "plugin",   "ic_extension_48px") + ".svg";

                color:  select($self.icon, 1, iir(!isNavFocused(), 4)) - iir(isPressed(), 4, true);
              });

              widget(label, {
                align: center;
                caption: $self.title;
                size: 1.2em;
                color: iir(!isNavFocused(), 4) - iir(isPressed(), 4, true);
              });
            });
          });
        });
      });
    });
    widget(loader, {
      hidden: !$clone.showSidebar;
      filterConstraintX: true;
      time: 0.05;
      source: "skin://menu/sidebar.view";
    });
  });

  widget(container_y, {

    alpha: iir($ui.showTopIcons, 4);

    widget(container_x, {
      space(1);
      padding: [1em, 0];
      height: 3em;
      widget(icon, {
        clickable: true;
        angle: iir($clone.showSidebar, 4) * -90;
        onEvent(activate, {

          toggle($clone.showSidebar);
        });
        navFocusable: false;
        color: 0.5 + iir(isHovered(), 4);
        size: 2em;
        source: "skin://icons/ic_menu_48px.svg";
      });
    });
  });

});
