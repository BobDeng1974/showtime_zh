#import "skin://theme.view"

widget(container_z, {

  ListItemBevel();
  ListItemHighlight();

  focusable: true;
  onEvent(activate, navOpen("slideshow:" + $self.url, void, $self, $parent.model, void, $parent.url));
  onEvent(itemMenu, eventWithProp(defaultInfo, $self));

  widget(container_x, {
    height: 5em;
    padding: 1;
    widget(image, {
      source: $self.metadata.icon ?? ("thumb://" + $self.url);
    });
  });
});
