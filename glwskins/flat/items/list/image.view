#import "skin://theme.view"

widget(container_z, {

  ListItemBevel();
  ListItemHighlight();

  focusable: true;
  onEvent(activate, navOpen($self.url, void, $self, $parent.model, void, $parent.url));

  widget(container_x, {
    height: 5em;
    padding: 1;
    widget(image, {
      source: $self.url;
    });
  });
});
