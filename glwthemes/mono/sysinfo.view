#import "theme://include/defs.view"
#import "theme://include/separators.view"

#define BAR_COLOR_LEFT()  {[0.0, 1.0, 0.0]}
#define BAR_COLOR_RIGHT() {[1.0, 1.0, 0.0]}

widget(container_x, {
  .align = right;
  
  widget(container_y, {
    .width = 200;

    widget(backdrop, {
      PLATE_GFX();
      .color = PLATE_COLOR_VIDEO();
      .alphaSelf = 0.75;
      
      widget(container_y, {
	
	widget(label, {
	  .align = center;
	  .caption = _("Audio output");
	});
	
	HORIZONTAL_SEPARATOR();

	widget(label, {
	  .caption = $global.media.current.metadata.title ?? _("No media loaded");
	  .align = center;
	  .sizeScale = 0.5;
	  .ellipsize = true;
	});

      
	cloner($global.media.current.audio.channels, container_y, {
	  widget(label, {
	    .sizeScale = 0.5;
	    .caption = $self.name;
	  });
	
	  widget(dummy, {
	    .height = 2;
	  });
	
	  widget(bar, {
	    .height = 5;
	    .color1 = BAR_COLOR_LEFT();
	    .color2 = BAR_COLOR_RIGHT();
	    .fill = 1 + $self.level / 100;
	  });
	
	  widget(dummy, {
	    .height = 4;
	  });
	});
      });
    });

    widget(backdrop, {
      .hidden = !$ui.gpu.temperature.available;
      PLATE_GFX();
      .color = PLATE_COLOR_VIDEO();
      .alphaSelf = 0.75;
      
      widget(container_y, {
	
	widget(label, {
	  .align = center;
	  .caption = _("GPU & Display");
	});
	
	HORIZONTAL_SEPARATOR();
	
	widget(label, {
	  .sizeScale = 0.5;
	  .caption = fmt(_("GPU Core temperature: %d / %d Â°"),
			 $ui.gpu.temperature.current,
			 $ui.gpu.temperature.thres);
	});
	
	widget(bar, {
	  .height = 5;
	  .color1 = BAR_COLOR_LEFT();
	  .color2 = BAR_COLOR_RIGHT();
	  .fill = $ui.gpu.temperature.current / $ui.gpu.temperature.thres;
	});


	HORIZONTAL_SEPARATOR();
	
	widget(label, {
	  .sizeScale = 0.5;
	  .caption = fmt(_("Framerate: %.2f Hz"), $ui.framerate);
	});

	widget(dummy, {
	  .height = 4;
	});
      });
    });



    widget(backdrop, {
      .hidden = !$global.system.cpuinfo.available;

      PLATE_GFX();
      .color = PLATE_COLOR_VIDEO();
      .alphaSelf = 0.75;
      
      widget(container_y, {
	
	widget(label, {
	  .align = center;
	  .caption = _("CPUs");
	});
	
	HORIZONTAL_SEPARATOR();
      
	cloner($global.system.cpuinfo.cpus, container_y, {
	  widget(label, {
	    .sizeScale = 0.5;
	    .caption = fmt("%s: %d%%",
			   $self.name,
			   $self.load * 100);
	  });
	
	  widget(dummy, {
	    .height = 2;
	  });
	
	  widget(bar, {
	    .height = 5;
	    .color1 = BAR_COLOR_LEFT();
	    .color2 = BAR_COLOR_RIGHT();
	    .fill = $self.load;
	  });
	
	  widget(dummy, {
	    .height = 4;
	  });
	});
      });
    });


    space(1);
  });
});
