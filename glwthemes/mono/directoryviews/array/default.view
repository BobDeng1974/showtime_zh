widget(image, {
  .color = 0.5 + isHovered() * 0.4 + isFocused() * 0.4 + isPressed() * 0.4;
  .hqScaling = true;
  .source = $self.metadata.icon ?? 
    "theme://icons/256x256/" + 
    translate($self.type, "Folder.png",
              "music",     "Music.png",
              "plugin",    "Plugin.png",
              "video",     "Movie.png",
              "tv",        "Tv.png",
              "photos",    "Picture.png");

  .alpha = iir(isReady(), 10);
  .saturation = 1 - iir(isReady(), 10);

});
