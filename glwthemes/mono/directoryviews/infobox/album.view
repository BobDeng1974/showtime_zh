widget(container_y, {
  .spacing = 5;
  .align = center;
  widget(label, {
    .align = center;
    .caption = $args.metadata.title;
    .sizeScale = 1.5;
  });
  widget(image, {
    .align = center;
    .source = $args.metadata.album_art;
    .height = $ui.size * 16;
  });
  widget(label, {
    .align = center;
    .caption = $args.metadata.artist;
    .sizeScale = 1.5;
    .ellipsize = true;
  });
});